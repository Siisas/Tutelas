    <script type="text/javascript">

        $(document).ready(function () {

            $.ajax({
                url: "@Url.Content("~/Account/getMenu")",
                type: "GET",
                data: { idRol : '@Session["Rol"]'},
                success: function (response, status, xhr) {
                    var nvContainer = $('#side-menu');
                    var htmlTree = '';
                    var padre = 0, con = 0, hijo = 0;

                    $.each(response, function (i, item) {

                        if (item.idPadre != padre && padre != 0) {
                            con = 0;
                            if (hijo != 0) {
                                htmlTree = htmlTree + '</ul></li>';
                                hijo = 0;
                            }
                            else {
                                htmlTree = htmlTree + '</li>';
                            }
                        }

                        if (item.idPadre == "0") {
                            htmlTree = htmlTree + '<li><a href="' + item.rutaMenu + '" title="' + item.Nombre + '">' + item.Nombre + '</a>';
                            padre = item.idMenu;
                        }
                        else {
                            hijo = item.idMenu;
                            if (con == 0) {
                                htmlTree = htmlTree + '<ul>';
                                con = 1;
                            }
                            htmlTree = htmlTree + '<li title="' + item.Nombre + '"><a href="' + item.rutaMenu + '">' + item.Nombre + '</a></li>';
                        }
                    });

                    menuLoaded = true;
                    nvContainer.html(htmlTree);

                    $('ul.navigation li a').click(
                       function (e) {
                           $(this).closest('ul').find('.select').removeClass('select');
                           $(this).parent().addClass('select');
                       });
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    var nvContainer = $('#navcontainer');
                    nvContainer.html(errorThrown);
                }
            });

            var sucess = '@Session["tienepermisos"]';
            if (sucess != '')
            {
                if (sucess == 'False') {
                    AbrirMensajeModal("adver", "Acceso denegado, por favor comuniquese con el administrador");
                }
            }


        });

    </script>
